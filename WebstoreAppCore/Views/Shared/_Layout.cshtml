<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebStoreAppCore</title>

    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900|Quicksand:400,700|Questrial" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    @*<link rel="stylesheet" href="~/css/customer/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/customer/font-awesome.css" />
    <link href="~/css/customer/default.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/customer/fonts.css" rel="stylesheet" type="text/css" media="all" />

    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <div id="menu">
            <ul>
                <li>
                    <!-- Example single danger button -->
                    <div class="btn-group">
                        <button class="btn btn-link btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Profile
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="Profile" asp-controller="WebUsers">my profile</a>
                            <a class="dropdown-item" href="#">favorites</a>
                            <a class="dropdown-item" href="#">messeges</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Separated link</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div id="header-wrapper">

            <div id="header" class="container">

                <div id="logo">
                    <h1><a href="#">Mobile Store</a></h1>
                    <div id="menu">
                        <ul>
                            <li><a asp-action="Profile" asp-controller="WebUsers" accesskey="2" title=""><i class="fa fa-user"></i> My profile</a></li>
                            <li><a asp-action="Index" asp-controller="Welcome" accesskey="1" title=""><i class="fa fa-home"></i> Home</a></li>
                            <li><a asp-action="Index" asp-controller="MobileProperties" accesskey="3" title=""><i class="fa fa-mobile"></i> Mobiles</a></li>
                            <li><a asp-action="Offers" asp-controller="Products" accesskey="6" title=""><i class="fa fa-check"></i> Offers</a></li>
                            <li><a asp-action="AboutUs" asp-controller="Adminshops" accesskey="7" title=""><i class="fa fa-star"></i> About</a></li>
                            <li><a asp-action="ContactUs" asp-controller="Adminshops" accesskey="8" title=""><i class="fa fa-phone"></i> Contact Us</a></li>
                        </ul>
                    </div>
                    <hr width="100%" color="#334467" />
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="copyright" class="container">
        <p>&copy; Untitled. All rights reserved. | Photos by <a href="http://fotogrph.com/">Fotogrph</a> | Design by <a href="http://templated.co" rel="nofollow">TEMPLATED</a>.</p>
        <ul class="contact">
            <li><a href="#" class="icon icon-twitter"><span>Twitter</span></a></li>
            <li><a href="#" class="icon icon-facebook"><span></span></a></li>
            <li><a href="#" class="icon icon-dribbble"><span>Pinterest</span></a></li>
            <li><a href="#" class="icon icon-tumblr"><span>Google+</span></a></li>
            <li><a href="#" class="icon icon-rss"><span>Pinterest</span></a></li>
        </ul>
    </div>
    <script src="~/js/customer/JQuery-3.3.1.min.js"></script>
    <script src="~/js/customer/popper.js"></script>
    <script src="~/js/customer/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
