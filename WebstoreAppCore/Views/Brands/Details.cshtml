@model WebStoreAppCore.Models.Brands

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Brands</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrandDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrandDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrandLogoPicturePath)
        </dt>
        <dd class="col-sm-10">
            @if (Model.BrandLogoPicturePath != string.Empty)
            {
                <img src="~/Images/BrandsLogo/@Model.BrandLogoPicturePath" style="height:70px;width:70px" class="img-fluid " />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BrandId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
