@model Products
@{
    ViewData["Title"] = "Product Details";
}

@section Styles{
        <link href="~/css/customer/productContent.css" rel="stylesheet" />
        <link href="~/css/customer/addToFavorites.css" rel="stylesheet" />
    }

<div id="page-wrapper">
    <div id="welcome" class="container">
        <div class="title">
            <h2>Product Details</h2>
            <h4>@Model.ProductName</h4>
            <h4>@Model.ProductPrice</h4>
            <a asp-action="addToFavorites" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-sm btn-primary">Add to Favorites</a>

            @*<div class="favorite-box">
            <span class="favbutton fa fa-heart-o"></span>
        </div>*@
        </div>

    </div>
</div>



<div id="sidecontainer">


    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/iphone11max.jpg" style=" width: 800px; height: 400px;" class="d-block" alt="...">
            </div>

            @foreach (var img in ViewBag.ProductPics)
            {
                <div class="carousel-item">
                    <img src="/images/@img.ProductImagePath" style=" width: 800px; height: 400px;" class="d-block" alt="...">
                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div id="productdetails">


        <table class="table table-borderless">


            <tbody>
                <tr>
                    <th scope="row">Brand</th>
                    <td>@Model.Brand.BrandName</td>

                </tr>
                <tr>
                    <th scope="row">Battery</th>
                    <td>@Model.MobileProperties.Battery</td>

                </tr>
                <tr>
                    <th scope="row">Operating System</th>
                    <td>@Model.MobileProperties.OperatingSystem</td>

                </tr>
                <tr>
                    <th scope="row">Package thickness</th>
                    <td>@Model.MobileProperties.ScreenSize</td>

                </tr>
                <tr>
                    <th scope="row">Storage Capacity</th>
                    <td>@Model.MobileProperties.Storage</td>

                </tr>
                <tr>
                    <th scope="row">Ram</th>
                    <td>@Model.MobileProperties.Ram</td>

                </tr>
                <tr>
                    <th scope="row">WaterResist</th>
                    <td>@Model.MobileProperties.WaterResist</td>

                </tr>
                <tr>
                    <th scope="row">Camera</th>
                    <td>@Model.MobileProperties.CameraPropertry</td>

                </tr>
            </tbody>
        </table>


    </div>

    <hr width="50%" color="white" />

    <div class="container">

        <div class="rating-box">
            <p>Rate this product</p>

            <div class="ratings">
                <span class="fa fa-star-o"></span>
                <span class="fa fa-star-o"></span>
                <span class="fa fa-star-o"></span>
                <span class="fa fa-star-o"></span>
                <span class="fa fa-star-o"></span>

            </div>
            <p id=ratevalue></p>

            <p class=heartvalue></p>

            <button class="btn btn-sm btn-success">Order Now!</button><br />
            @*<button class="btn btn-sm btn-info">Add to Order List!</button>*@

        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/customer/productContent.js"></script>
    <script src="~/js/customer/addToFavorites.js"></script>
}
